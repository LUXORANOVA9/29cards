    "@types/helmet": "^0.0.48",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/uuid": "^10.0.0",
    "firebase-tools": "^15.4.0",
    "turbo": "^1.12.4"
  },
  "dependencies": {
    "@dataconnect/generated": "file:src/dataconnect-generated"
  }
